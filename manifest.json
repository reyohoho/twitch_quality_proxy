{
  "manifest_version": 3,
  "name": "ReYohoho Twitch Proxy",
  "version": "1.0",
  "description": "Proxies Twitch usher requests to a custom proxy.",
  "permissions": [
    "declarativeNetRequest",
    "declarativeNetRequestWithHostAccess"
  ],
  "host_permissions": [
    "https://usher.ttvnw.net/*",
    "https://*.twitch.tv/*"
  ],
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "ruleset_1",
        "enabled": true,
        "path": "rules.json"
      }
    ]
  }
} 